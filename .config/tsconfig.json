{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "esnext",
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "outDir": "../lib",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "constants/*": ["../constants/*"],
      "assets/*": ["../assets/*"],
      "theme/*": ["../theme/*"]
    },
  },
  "include": [
    "../components/**/*"
  ],
  "exclude": [
    "../**/*.stories.tsx",
    "../esm",
    "../lib"
  ],
  "files": [
    "../index.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
