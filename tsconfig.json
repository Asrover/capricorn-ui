{
  "compilerOptions": {
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es5",
    "lib": [ "es2015", "dom" ],
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "jsx": "react",
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "constants/*": ["constants/*"],
      "assets/*": ["assets/*"],
      "theme/*": ["theme/*"]
    }
  },
  "files": [
    "index.ts",
    "index.d.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
